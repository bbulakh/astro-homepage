---
interface Props {
  company: string;
  role: string;
  periodStart: string;
  periodEnd: string;
  companyLogo: string;
}

const { company, role, periodStart, periodEnd, companyLogo } = Astro.props;
---

<div class="flex flex-col my-3">
  <div class="flex justify-between gap-2 items-center w-full">
    <div class="flex w-8/12 items-center">
      <div class="">
        <img
          class="rounded-full w-16 object-left"
          src={companyLogo}
          alt="Digital Banana Logo"
        />
      </div>

      <div class="min-w-[145px]">
        <p class="font-bold text-xl">{company}</p>
        <p class="text-sm text-slate-500">{role}</p>
      </div>
    </div>

    <div class="w-4/12 flex gap-2 text-slate-500">
      <div class="flex flex-wrap gap-2 text-sm sm:text-base ml-auto">
        <div class="">{periodStart}</div>
        <span>&mdash;</span>
        <div class="">{periodEnd}</div>
      </div>
    </div>
  </div>
</div>
