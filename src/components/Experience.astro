---
interface Props {
	company: string;
	role: string;
	periodStart: number;
    periodEnd: number;
}

const { company, role, periodStart, periodEnd } = Astro.props;
---


<div class="flex flex-col my-3">
    <div class="flex justify-between items-center w-full">
        <div class="flex w-8/12 items-center">
            <div class="flex-shrink-0">
                <img class="rounded-full w-16 object-left" src="src/images/jungle-logo.svg"
                    alt="Digital Banana Logo">
            </div>

            <div class="ml-2 min-w-[145px]">
                <p class="font-bold text-xl">{company}</p>
                <p class="text-sm text-slate-500">{role}</p>
            </div>
        </div>

        <div class="w-4/12 flex gap-2 text-slate-500">
            <div class="flex flex-wrap gap-2 ml-auto">
                <div class="">{periodStart}</div>
                <span>&mdash;</span>
                <div class="">{periodEnd}</div>
            </div>
        </div>
    </div>
</div>